<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Resultado">

    <LinearLayout
        android:id="@+id/vg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiente_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_weight"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-24dp"
            android:text="Calculadora de IMC"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:text="Confira abaixo o resultado do seu IMC e sua classificação:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_resultadocalculo"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:textSize="60sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            tools:text="23.66" />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="70dp">

</LinearLayout>


    <TextView
        android:id="@+id/tv_classificacao_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        android:text="A classificação do seu IMC é:" />

    <TextView
        android:id="@+id/tv_classificacao"
        android:gravity="center"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:text="OBESIDADE GRAVE" />

</LinearLayout>